        <property name="ALGORITHM_CLASS_EXIST_ERROR_MESSAGE" value="This algorithm does not exist."/>
        <property name="ACCESS_ERROR_MESSAGE" value="This algorithm can not be accessed."/>
        <property name="INSTANTIATE_ERROR_MESSAGE" value="This algorithm can not be instantiated."/>

        <!-- APPLICATION-SPECIFIC MESSAGE TITLES -->
        <property name="SAVE_UNSAVED_WORK_TITLE" value="Save Current Work"/>
        <property name="LONG_LOAD_FILE_TITLE" value="Data File is More Than 10 Lines"/>

