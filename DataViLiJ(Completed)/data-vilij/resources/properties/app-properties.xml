        <!-- APPLICATION-SPECIFIC PARAMETERS -->
        <property name="DATA_FILE_EXT" value=".tsd"/>
        <property name="DATA_FILE_EXT_DESC" value="Tab-Separated Data File"/>
        <property name="TEXT_AREA" value="text area"/>
        <property name="SPECIFIED_FILE" value=" specified file"/>
        <property name="BUTTON_LABEL_DISPLAY" value="Display"/>
        <property name="CLUSTERING_BUTTON_LABEL_DISPLAY" value="Clustering"/>
        <property name="CLASSIFICATION_BUTTON_LABEL_DISPLAY" value="Classification"/>
        <property name="CONFIG_BUTTON_LABEL_DISPLAY" value="Configuration"/>
        <property name="CONTINUOUS_BUTTON_LABEL_DISPLAY" value="Run Continuously"/>
        <property name="ITERATIONS_LABEL_DISPLAY" value="Maximum Number of Iterations:"/>
        <property name="INTERVALS_LABEL_DISPLAY" value="Update Interval:"/>
        <property name="CLUSTERNUM_LABEL_DISPLAY" value="Number of Clusters:"/>
        <property name="BACK_BUTTON_LABEL_DISPLAY" value="Back"/>
        <property name="RUN_BUTTON_LABEL_DISPLAY" value="Next Display"/>
