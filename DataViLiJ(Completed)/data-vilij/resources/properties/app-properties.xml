        <property name="LABEL_NUMBER_TEXT" value=" labels load from text file at: "/>
        <property name="LABEL_LIST_TEXT" value=". The labels are:"/>
        <property name="NO_FILE_TEXT" value="(No File Found)"/>
        <property name="OK" value="OK"/>
        <property name="CLASSIFICATION_INSTANCE_1" value="@classification-instance1"/>
        <property name="CLASSIFICATION_INSTANCE_2" value="@classification-instance2"/>
        <property name="CLASSIFICATION_LABEL_1" value="classification-label1"/>
        <property name="CLASSIFICATION_LABEL_2" value="classification-label2"/>
        <property name="CLASSIFICATION_CSS_LOOKUP" value=".chart-series-line"/>
        <property name="CLASSIFICATION_CSS_STYLE" value="-fx-stroke: blue;"/>
        
        
        <!-- SYMBOLS -->
        <property name="COLON" value=":"/>
        <property name="AT_LINE" value="@"/>
        <property name="COMMA" value=","/>
        
        <!-- CSS Stuff -->
        <property name="TEXT_AREA_CSS" value="textcss"/>
        
        <!-- Algorithms (Add more algorithms if neccessary,separate names by comma) -->
        <property name="CLUSTERING_ALGORITHM_NAMES" value="data-vilij/src/clustering"/>
        <property name="CLASSIFICATION_ALGORITHM_NAMES" value="data-vilij/src/classification"/>

    </property_list>
    <property_options_list/>
</properties>